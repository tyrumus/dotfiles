# vim: ft=zsh
# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

if [ -f "${XDG_CACHE_HOME:-$HOME}/.cache/chezmoi-reminders.zsh" ]; then
    source "${XDG_CACHE_HOME:-$HOME}/.cache/chezmoi-reminders.zsh"
fi

source /usr/share/zsh-theme-powerlevel10k/powerlevel10k.zsh-theme
# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=5000
SAVEHIST=5000
unsetopt beep
bindkey -e
# End of lines configured by zsh-newuser-install
# The following lines were added by compinstall
zstyle ':completion:*' completer _complete _ignored
zstyle :compinstall filename '/home/{{- .chezmoi.username -}}/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall

#######################
# My code starts here #
#######################

# Aliases
alias ls="exa --icons"
alias ll="ls --long --header"
alias la="ls -la"
alias cat="bat"
alias df="duf"
alias rsync="~/.local/share/zsh-scripts/rsync-fixed.zsh"
alias chezgit="lazygit -p ~/.local/share/chezmoi"
alias cedit="chezmoi edit"
alias lg="lazygit"
{{- if not (eq .chezmoi.hostname "leviticus") }}
alias wakelevi="ssh pi \"/home/pi/wake.sh leviticus\""
alias sleeplevi="ssh -t leviticus /usr/bin/sudo /usr/bin/systemctl suspend"
{{- end }}

{{- if not (eq .chassistype "wsl") }}
### kitty support
alias clip="kitty +kitten clipboard"
alias c="pwd | clip"
alias ssh="TERM=xterm-256color ssh"
alias kssh="kitty +kitten ssh"
alias icat="kitty +kitten icat"
{{- end }}

### Functions
search() {
    find . -name "$1" -exec grep -i "$2" {} +
}

# fzf plugins
source /usr/share/fzf/completion.zsh
source /usr/share/fzf/key-bindings.zsh

### Z shell stuffs
# Ctrl+left, Ctrl+right moves a whole word
bindkey "^[[1;5C" forward-word
bindkey "^[[1;5D" backward-word

# Enhanced tab completion
zstyle ':completion:*:*:*:default' menu yes select search

# spelling suggestions for mistyped commands
setopt correct

scroll-and-clear-screen() {
    printf "\n%.0s" {1..$LINES}
    zle clear-screen
}
zle -N scroll-and-clear-screen
bindkey "^l" scroll-and-clear-screen
bindkey "\e[H" beginning-of-line
bindkey "\e[3~" delete-char
bindkey "\e[F" end-of-line

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
