# vim: ft=zsh
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

if [ -f "${XDG_CACHE_HOME:-$HOME}/.cache/chezmoi-reminders.zsh" ]; then
    source "${XDG_CACHE_HOME:-$HOME}/.cache/chezmoi-reminders.zsh"
fi

HISTFILE=~/.histfile
HISTSIZE=5000
SAVEHIST=5000
unsetopt beep
bindkey -e
zstyle ':completion:*' completer _complete _ignored
zstyle :compinstall filename '/home/{{- .chezmoi.username -}}/.zshrc'

autoload -Uz compinit
compinit

#######################
# My code starts here #
#######################

# Zsh Settings
setopt INC_APPEND_HISTORY
setopt HIST_IGNORE_DUPS
setopt correct
bindkey "^[[1;5C" forward-word
bindkey "^[[1;5D" backward-word
scroll-and-clear-screen() {
    printf "\n%.0s" {1..$LINES}
    zle clear-screen
}
zle -N scroll-and-clear-screen
bindkey "^l" scroll-and-clear-screen
bindkey "\e[H" beginning-of-line
bindkey "\e[3~" delete-char
bindkey "\e[F" end-of-line

# Completions
source /usr/share/fzf/completion.zsh
zstyle ':completion:*:*:*:default' menu yes select search

# Aliases
alias ls="exa --icons"
alias ll="ls --long --header"
alias la="ls -la"
alias chezgit="lazygit -p ~/.local/share/chezmoi"
alias cedit="chezmoi edit"
alias lg="lazygit"
alias disablehistory="function zshaddhistory(){ return 1 }"
alias enablehistory="unset -f zshaddhistory"

{{- if not (eq .chassistype "kitty") }}
### Arch Linux support
alias cat="bat"
alias df="duf"
alias top="btm"
alias ps="procs"
{{- end }}

{{- if not (eq .chezmoi.hostname "leviticus") }}
alias wakelevi="ssh pi \"/home/pi/wake.sh leviticus\""
alias sleeplevi="ssh -t leviticus /usr/bin/sudo /usr/bin/systemctl suspend"
{{- end }}

{{- if not (eq .chassistype "wsl") }}
### kitty support
alias clip="kitty +kitten clipboard"
alias c="pwd | clip"
alias ssh="TERM=xterm-256color ssh"
alias kssh="kitty +kitten ssh"
alias icat="kitty +kitten icat"
{{- end }}

# Plugins
source /usr/share/fzf/key-bindings.zsh
eval "$(zoxide init zsh --cmd j)"
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

